<div id="register" class="container text-center">
  <br>
  <h3>Register Your Property!</h3>
  <br>
    
  <form id="form-register" name="registration">   
    <div id="dropdownname" class="col-sm-12 form-group" >
              <label for="usr">Name: </label>

           <select name="name" value="--Select Name--">
            <option value="" >Select your Name </option>
            <option value="Amol Pednekar">Amol Pednekar</option>
            <option value="Riya Borkar">Riya Borkar</option>
            <option value="Aaron Colaco">Aaron Colaco</option>
            <option value="Shantanu Kulkarni">Shantanu Kulkarni</option>
           <option value="Saideep Bhosle">Saideep Bhosle</option>
            <option value="Rishab Bandekar">Rishab Bandekar</option>
            <option value="Vivek Kumar">Vivek Kumar</option>
          </select>


              </div>
              <br><br>

      <div class="col-sm-6 form-group">
        <label for="usr">Aadhar Card No:</label>
        <input type="text" class="form-control" id="Aadhar" name="Aadhar" onkeypress='return event.charCode >= 48 && event.charCode <= 57'  maxlength="12" minlength=12>
       </div>
      <div class="col-sm-6 form-group">
        <label for="usr">Area:</label>
        <input type="text" class="form-control" id="Area" name="Area" onkeypress='return event.charCode >= 48 && event.charCode <= 57' >
      </div>
      <div class="col-sm-12 form-group">
        <label for="Address">Address:</label>
        <textarea class="form-control" rows="5" id="Address" name="Address" ></textarea>
      </div>
    </div>
    
    <div class="button-register"> 
      <button id="registerButton" type="submit" class="btn btn-default"  value="submit">Register</button>
      <br><br>
    </div>
  </form>
    
  <h2>Block Details</h2>
  <pre id="result"></pre>

</div>
